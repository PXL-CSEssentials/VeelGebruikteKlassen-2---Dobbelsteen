<Window x:Class="VeelGebruikteKlassen_2___Dobbelsteen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VeelGebruikteKlassen_2___Dobbelsteen"
        mc:Ignorable="d"
        Title="Dobbelstenen werpen tot 6" Height="180" Width="350">
    <Grid Background="#FFA86565">
        <TextBox x:Name="resultTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" VerticalScrollBarVisibility="Auto" Height="132" IsReadOnly="True"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="255,64,0,0" VerticalAlignment="Top" Width="72" Click="startButton_Click" Foreground="#FFA86565" FontWeight="Bold" Height="22"/>
        <Button x:Name="newButton" Content="Opnieuw" HorizontalAlignment="Left" Margin="255,93,0,0" VerticalAlignment="Top" Click="newButton_Click" FontWeight="Bold" Foreground="#FFA86565" Height="22" Width="72"/>
        <Button x:Name="closeButton" Content="Sluiten" HorizontalAlignment="Left" Margin="255,120,0,0" VerticalAlignment="Top" Width="72" Click="closeButton_Click" Foreground="#FFA86565" FontWeight="Bold" Height="22"/>
    </Grid>
</Window>
